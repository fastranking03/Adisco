<html lang="en"></html>

<head>
    <base href="<%= baseURL %>">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Adisco | Edit Category</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <%- include('includes/head') %>
</head>
 
<body>
    <div>
        <div class="flex">
            <%- include('includes/side-bar') %>

            <div class="pages">
                <div>
                    <%- include('includes/header') %>
                </div>
                <!-- Page Content -->
                 <div class="p-5">
                     <div>
                         <div class="">
                            <h3 class="text-2xl font-bold">Edit Category</h3>
                         </div>
                         <div class="mt-4">
                              <form method="post" action="/admin/edit-category">
                                  <div class="flex gap-5 mt-5">
                                    <div class="sm:w-[50%]">
                                        <div>
                                            <label class="font-[600]">Category Name</label>
                                            <input type="text" name="cat_name" value="<%= catData.cat_name %>" class="p-2 border-[1px] rounded-[10px] w-[100%] mt-2 outline-none" required>
                                        </div>
                                    </div>
                                  </div>
                                 <input type="hidden" name="id" value="<%= catData.id %>"> 
                                 <div class="mt-5">
                                    <button type="submit" class="p-2 bg-sky-400 text-white px-10 rounded-[10px]">Update</button>
                                </div>
                              </form>
                         </div>
                     </div>
                 </div>
            </div>
        </div>
    </div>
    <%- include('includes/foot') %>
 
    <script>
      $(document).on("change", "#selectMenuFecture",function(){
        // var menufecture = $(this).val()
        var menu_id = $(this).find(':selected').data('menu_id');
       
        $('select[name="c_modal"] option').each(function() {
                if ($(this).val() != "") {
                    $(this).hide();
                }
            });

        $('select[name="c_modal"] option[data-menufecture="' + menu_id + '"]').show();
    
      })
    </script>
</body>
</html>